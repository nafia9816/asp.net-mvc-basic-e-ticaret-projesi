@using BOOK_.Entity;
@model Book
@{
    ViewBag.Title = "Details";
}

<style>
    #description {
       font-family:cursive;
       text-align:justify;
    }
</style>

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="/Images/@Model.Image" class="img-responsive img-fluid rounded " style="width:400px;">


        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <h1 style="font-family:Elephant">@Model.Name</h1>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    @if (Model.IsApproved)
                    {
                        <span class="badge badge-success">Stokta</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">Stokda Yok</span>
                    }


                </div>
            </div>

            <div class="row mt-1">
                <div class="col-md-12">
                    <div id="description" >
                        @Model.Description
                    </div>
                </div>
            </div>


            <div class="row mt-1">
                <div class="col-md-12">
                    <h4 id="product-price">
                    @Model.Price
                    <i class="fa fa-try" aria-hidden="true"></i></h4>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-md-12">

                  @using (Html.BeginForm("AddToBasket","Card")) {
                      @Html.HiddenFor(i=>i.Id)
                    <button type="submit" class="btn btn-success">
                    <i class="fa fa-cart-plus" aria-hidden="true"></i>
                      Sepete Ekle </button>
                     
                  }

                </div>
            </div>



        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-12">
            <div class="bd-example bd-example-tabs">
                <ul class="nav nav-tabs mb-3" id="pills-tab" role="tablist">
                   
                    
                    <li class="nav-item">
                        <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab" aria-controls="pills-contact" aria-selected="false">Yazar Hakkında</a>
                    </li>
                </ul>
                <div class="tab-content" id="pills-tabContent">
                    
                    
                    <div class="tab-pane fa" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">
                        <p style=" font-family:cursive;"> @Model.AuthorAbout </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>