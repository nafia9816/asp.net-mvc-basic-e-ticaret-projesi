@model IEnumerable<BOOK_.Models.UserOrderModel>
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <hr />
            <h2>Sipariş Bilgileriniz</h2>
            <hr />

            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Sipariş Numarası</th>
                        <th>Sipariş Tarihi</th>
                        <th>Toplam Fiyat</th>
                        <th>Sipariş Durumu</th>
                        <th>Sipariş Detayı</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.OrderNumber</td>
                        <td>@item.OrderDate.ToShortDateString()</td>
                        <td>
                            <i class="fa fa-try" aria-hidden="true"></i>
                            @item.Total
                        </td>
                        <td>@item.OrderState</td>
                        <td>
                            @Html.ActionLink("Details", "Details", new { id = @item.Id }, new { @class = "btn btn-outline-info" })
                        </td>
                    </tr>
                    }

                </tbody>
            </table>

        </div>
    </div>
</div>

